{
  "name": "hunajapannu",
  "version": "1.0.0",
  "description": "Personal Cowrie honeypot analytics dashboard",
  "private": true,
  "author": "Oskari Kosonen",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.5",
    "npm": ">=10.8.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently --kill-others --prefix \"[{name}]\" --names \"backend,frontend\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run start --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "start": "npm run dev",
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix backend",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build --prefix frontend",
    "build:backend": "npm run build --prefix backend",
    "setup": "node scripts/setup/setup.js",
    "start:dev": "node scripts/dev/start.js",
    "stop:dev": "node scripts/dev/stop.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
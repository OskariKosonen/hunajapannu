# Azure Storage Account Configuration
# Get this from Azure Portal -> Storage Account -> Access Keys -> Connection String
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=hunajapannulogs;AccountKey=your_account_key;EndpointSuffix=core.windows.net

# Alternative: Use SAS URL (same as VM script uses)
# AZURE_SAS_URL=https://hunajapannulogs.blob.core.windows.net/?sp=w&st=2025-09-19T11:24:13Z&se=2026-09-19T19:39:13Z&spr=https&sv=2024-11-04&sr=c&sig=...

# Container name where Cowrie logs are stored (matches VM script)
AZURE_CONTAINER_NAME=hunajapannulogs

# Log structure from VM uploader:
# - Daily logs: cowrie-YYYY-MM-DD.json (live logs)
# - Historical: historical/cowrie.json* (existing logs)
AZURE_LOG_PREFIX=

# Application Configuration
NODE_ENV=production
PORT=3001

# Frontend URL for CORS (update this for production)
FRONTEND_URL=http://localhost:3000

# Optional: Enable detailed logging
DEBUG_LOGS=false
